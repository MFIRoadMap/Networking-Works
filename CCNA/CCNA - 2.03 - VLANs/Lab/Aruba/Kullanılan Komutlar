ArubaCX_1
-------------------------------------------------
conf ter

spanning-tree
interface 1/1/1-1/1/6
no routing
no sh
exit

hostname ArubaCX-1

vlan 10
name V10
vlan 20
name V20
vlan 30
name V30
vlan 40
name V40
exit

interface 1/1/1
vlan trunk allowed 1,10,20,30,40
no sh
exit
interface 1/1/2
vlan trunk allowed all
no sh
exit

interface 1/1/5
vlan access 10
exit
interface 1/1/6
vlan access 20
exit




