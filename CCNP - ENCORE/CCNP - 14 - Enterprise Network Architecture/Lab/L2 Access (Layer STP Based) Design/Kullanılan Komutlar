R1
------------------------------------------
en
conf ter
hostname R1

int fa 2/0
ip address 10.0.10.1 255.255.255.240
no sh
exit
int fa 2/1
ip address 10.0.20.1 255.255.255.240
no sh
exit

router ospf 5
network 10.0.10.1 0.0.0.15 area 10
network 10.0.20.1 0.0.0.15 area 10
exit



R2
------------------------------------------
en
conf ter
hostname R1

int fa 2/0
ip address 20.0.10.1 255.255.255.240
no sh
exit
int fa 2/1
ip address 20.0.20.1 255.255.255.240
no sh
exit

router ospf 5
network 20.0.10.1 0.0.0.15 area 10
network 20.0.20.1 0.0.0.15 area 10
exit





L3SW1
------------------------------------------
en

vlan database
vlan 101
vlan 102
vlan 103
exit

conf ter
hostname L3SW1

ip routing

int vlan 101
ip address 192.168.101.2 255.255.255.0
vrrp 1 ip 192.168.101.1
vrrp 1 preempt
no sh
exit
int vlan 102
ip address 192.168.102.2 255.255.255.0
vrrp 2 ip 192.168.102.1
vrrp 2 preempt
no sh
exit
int vlan 103
ip address 192.168.103.2 255.255.255.0
vrrp 3 ip 192.168.103.1
vrrp 3 preempt
no sh
exit

int fa 1/0
switchport mode trunk
switchport trunk encapsulation dot1q
exit
int fa 1/1
switchport mode trunk
switchport trunk encapsulation dot1q
exit
int fa 1/2 
switchport mode trunk
switchport trunk encapsulation dot1q
exit
int fa 1/3
switchport mode trunk
switchport trunk encapsulation dot1q
exit

int fa 1/14
channel-group 2 mode on
exit
int fa 1/15
channel-group 2 mode on
exit

int port-channel 2 
switchport mode trunk
exit


int fa 0/0
ip address 10.0.10.2 255.255.255.240
no sh
exit
int fa 0/1
ip address 20.0.10.2 255.255.255.240
no sh
exit

router ospf 5
network 10.0.10.2 0.0.0.15 area 10
network 20.0.10.2 0.0.0.15 area 10
network 192.168.101.1 0.0.0.255 area 10
network 192.168.102.1 0.0.0.255 area 10
network 192.168.103.1 0.0.0.255 area 10
exit




L3SW2
------------------------------------------
en

vlan database
vlan 101
vlan 102
vlan 103
exit

conf ter
hostname L3SW2

ip routing

int vlan 101
ip address 192.168.101.3 255.255.255.0
vrrp 1 ip 192.168.101.1
vrrp 1 preempt
no sh
exit
int vlan 102
ip address 192.168.102.3 255.255.255.0
vrrp 2 ip 192.168.102.1
vrrp 2 preempt
no sh
exit
int vlan 103
ip address 192.168.103.3 255.255.255.0
vrrp 3 ip 192.168.103.1
vrrp 3 preempt
no sh
exit

int fa 1/0
switchport mode trunk
switchport trunk encapsulation dot1q
exit
int fa 1/1
switchport mode trunk
switchport trunk encapsulation dot1q
exit
int fa 1/2 
switchport mode trunk
switchport trunk encapsulation dot1q
exit
int fa 1/3
switchport mode trunk
switchport trunk encapsulation dot1q
exit

int fa 1/14
channel-group 2 mode on
exit
int fa 1/15
channel-group 2 mode on
exit

int port-channel 2 
switchport mode trunk
exit


int fa 0/0
ip address 10.0.20.2 255.255.255.240
no sh
exit
int fa 0/1
ip address 20.0.20.2 255.255.255.240
no sh
exit

router ospf 5
network 10.0.20.2 0.0.0.15 area 10
network 20.0.20.2 0.0.0.15 area 10
network 192.168.101.1 0.0.0.255 area 10
network 192.168.102.1 0.0.0.255 area 10
network 192.168.103.1 0.0.0.255 area 10
exit






VPC1 : ip 192.168.101.5 255.255.255.0 192.168.101.1
VPC2 : ip 192.168.102.5 255.255.255.0 192.168.102.1
VPC3 : ip 192.168.103.5 255.255.255.0 192.168.103.1
VPC4 : ip 192.168.102.10 255.255.255.0 192.168.102.1
VPC5 : ip 192.168.103.10 255.255.255.0 192.168.103.1
VPC6 : ip 192.168.101.10 255.255.255.0 192.168.101.1
VPC7 : ip 192.168.103.15 255.255.255.0 192.168.103.1
VPC8 : ip 192.168.102.15 255.255.255.0 192.168.102.1






Aynı network içinde olduğu çin SVI arayüzlerine tek bir ip adresi tanımlanabiliyor. Bu nedenle InterVLAN Communication süreci bir üst katman olan Core katmanında yapılması gerekti. InterVLAN Communication işleminin Distribution katmanında yapılabilmesi için FHRP protokolleri kullanılarak VLAN arayüzlerinin yedeklenmesi gerekiyor ama bu durumda da L3 switchler arasında L3 yedekleme yapılmış oluyor (Yani L2 trafik geçmeyecek ve aynı zamanda sadece birisi kullanılabilecek). Yani L2 STP Based tasarımının gerekliliklerini karşılamıyor.